model Asset {
    id                     BigInt @id @default(autoincrement())
    name                   String
    description            String
    quantity               Int
    quantityCommited       Int    @default(0)
    quantityActive         Int    @default(0)
    maximumLendingDuration Int
    minimumLendingDuration Int

    requiresApproval Boolean @default(true)

    status String @db.VarChar(50)

    categoryId BigInt
    category   AssetCategory @relation(fields: [categoryId], references: [id])

    orders    Order[]
    galleries AssetGallery[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("assets")
}

model AssetGallery {
    id  BigInt @id @default(autoincrement())
    url String

    assetId BigInt
    asset   Asset  @relation(fields: [assetId], references: [id])

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("asset_galleries")
}

model AssetCategory {
    id          BigInt @id @default(autoincrement())
    name        String
    description String

    assets Asset[]

    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("asset_categories")
}
